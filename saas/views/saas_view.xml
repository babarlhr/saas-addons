<odoo>
    <!--  SaaS Template  -->
    <record id='saas_template_view_tree' model='ir.ui.view'>
        <field name="name">saas.template.tree</field>
        <field name="model">saas.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Template" />
            </tree>
        </field>
    </record>

    <record id="saas_template_form_view" model="ir.ui.view">
        <field name="name">saas.template</field>
        <field name="model">saas.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_build" type="object" string="Create Build" class="oe_read_only"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="template_demo"/>
                        <field name="template_modules_domain" widget="ace" options="{'mode': 'python'}"/>
                        <field name="template_post_init" widget="ace" options="{'mode': 'python'}"/>
                        <field name="build_post_init" widget="ace" options="{'mode': 'python'}"/>
                        <field name="operator_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!--    SaaS Template Operator-->
    <record id="saas_template_operator_form_view" model="ir.ui.view">
        <field name="name">saas.template.operator</field>
        <field name="model">saas.template.operator</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1" class="oe_read_only"/>
                </header>
                <sheet>
                    <group>
                        <field name="operator_db_name"/>
                        <field name="operator_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="saas_template_operator_tree" model="ir.ui.view">
        <field name="name">saas.template.operator.tree</field>
        <field name="model">saas.template.operator</field>
        <field name="arch" type="xml">
            <tree>
                <field name="operator_db_name" string="Template database name"/>
            </tree>
        </field>
    </record>

    <!-- SaaS DB   -->
    <record id='saas_db_view_tree' model='ir.ui.view'>
        <field name="name">saas.db.tree</field>
        <field name="model">saas.db</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="saas_db_form_view" model="ir.ui.view">
        <field name="name">saas.db</field>
        <field name="model">saas.db</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_get_build_access" type="object" string="Connect to the Build" attrs="{'invisible':[('state', '!=', 'done')]}" class="oe_read_only" />
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="operator_id"/>
                        <field name="type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SaaS Operator   -->
    <record id="saas_operator_form_view" model="ir.ui.view">
        <field name="name">saas.operator</field>
        <field name="model">saas.operator</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="db_url_template"/>
                        <field name="db_name_template"/>
                        <field name="host"/>
                        <field name="port"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record model='ir.actions.act_window' id="saas_template_action" >
        <field name="name">SaaS template</field>
        <field name="res_model">saas.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model='ir.actions.act_window' id="saas_db_action" >
        <field name="name">SaaS DB</field>
        <field name="res_model">saas.db</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items-->
    <menuitem name="SaaS"
              id="saas_main_menu"/>

    <menuitem name="SaaS Template"
              parent="saas_main_menu"
              id="saas_main_menu_item"
              sequence="3"
              action="saas_template_action"/>

    <menuitem name="SaaS DB"
              parent="saas_main_menu"
              id="saas_main_menu_item_2"
              sequence="4"
              action="saas_db_action"/>

</odoo>
