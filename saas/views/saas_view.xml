<odoo>
    <record id='saas_view_tree' model='ir.ui.view'>
        <field name="name">saas.tree</field>
        <field name="model">saas.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="saas_template_form_view" model="ir.ui.view">
        <field name="name">saas.template</field>
        <field name="model">saas.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_build" type="object" string="Create Build" class="oe_read_only" icon="fa-building"/>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="template_demo"/>
                        <field name="template_modules_domain" widget="ace" options="{'mode': 'python'}"/>
                        <field name="template_post_init" widget="ace" options="{'mode': 'python'}"/>
                        <field name="build_post_init" widget="ace" options="{'mode': 'python'}"/>
                        <field name="operator_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model='ir.actions.act_window' id="saas_template_action" >
        <field name="name">SaaS template</field>
        <field name="res_model">saas.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items-->
    <menuitem name="SaaS"
              id="saas_main_menu"/>

    <menuitem name="SaaS Template"
              parent="saas_main_menu"
              id="saas_main_menu_item"
              sequence="3"
              action="saas_template_action"/>

</odoo>
